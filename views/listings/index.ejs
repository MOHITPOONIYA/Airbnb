<%layout("layouts/boilerplate.ejs") -%>

<style>
    /* Add a little margin to the container to move it away from the top */
    .filters-container {
        margin-top: 2rem;
    }

    /* Flexbox container for the filters */
    #filters {
        display: flex;
        flex-wrap: nowrap; /* Prevents wrapping to a new line */
        justify-content: center; /* Centers the items horizontally */
        align-items: center;
        overflow-x: auto; /* Adds horizontal scrolling if content overflows */
        gap: 3rem; /* Spacing between each filter item */
        padding: 0 1rem;
    }

    /* Styling for each individual filter link */
    .filter-link {
        text-decoration: none; /* Removes underline from links */
        color: inherit; /* Inherits the text color from the parent */
        display: flex;
        flex-direction: column; /* Stacks the icon and text vertically */
        align-items: center;
        text-align: center;
        opacity: 0.7; /* Initial opacity */
        transition: opacity 0.3s ease; /* Smooth transition for hover effect */
        white-space: nowrap; /* Prevents text from wrapping */
    }

    .filter-link:hover {
        opacity: 1; /* Full opacity on hover */
        cursor: pointer;
    }

    /* Style for the icon */
    .filter-link i {
        font-size: 1.5rem;
        color: #717171;
    }

    /* Style for the text */
    .filter-link p {
        font-size: 0.8rem;
        font-weight: 500;
        margin-top: 0.5rem;
        color: #222222;
    }

    /* New style for active filter */
    .active-filter {
        opacity: 1;
        border-bottom: 2px solid #000;
        padding-bottom: 5px;
    }

    .active-filter i {
        color: #000;
    }

    .active-filter p {
        color: #000;
        font-weight: 700;
    }
    .tax-info{
      display: none;
    }
</style>

<div class="filters-container">
  <div id="filters">
    <a href="/listings" class="filter-link <%= activeCategory === null ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-house"></i></div>
        <p>All</p>
    </a>
    <a href="/listings/category/Trending" class="filter-link <%= activeCategory === 'Trending' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </a>
    <a href="/listings/category/Rooms" class="filter-link <%= activeCategory === 'Rooms' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
    </a>
    <a href="/listings/category/Iconic Cities" class="filter-link <%= activeCategory === 'Iconic Cities' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-city"></i></div>
        <p>Iconic Cities</p>
    </a>
    <a href="/listings/category/Mountains" class="filter-link <%= activeCategory === 'Mountains' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
    </a>
    <a href="/listings/category/Castles" class="filter-link <%= activeCategory === 'Castles' ? 'active-filter' : '' %>">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
    </a>
    <a href="/listings/category/Amazing Pools" class="filter-link <%= activeCategory === 'Amazing Pools' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
    </a>
    <a href="/listings/category/Camping" class="filter-link <%= activeCategory === 'Camping' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
    </a>
    <a href="/listings/category/Boats" class="filter-link <%= activeCategory === 'Boats' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-sailboat"></i></div>
        <p>Boats</p>
    </a>
    <div style="border: 2px solid black; border-radius: 25px; padding: 0.5rem 1rem; margin-bottom: 2rem; margin-left: 3rem;">
      <div class="tax-toggle"  >
          <div class="form-check-reverse form-switch" style="font-weight: 700; ">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
          </div>
      </div>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (let list of allListings) { %>
    <a href="/listings/<%= list._id %>" style="text-decoration: none;">
      <div class="card col listing-card" >
        <img src="<%= list.image.url %>" class="card-img-top" style="height: 20rem;" alt="listing">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= list.title %></b><br>
            &#8377;<%= list.price.toLocaleString("en-IN") %> / night
            <i class="tax-info"> &nbsp;&nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<script>
  let taxSwitch=document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display != "inline"){
        info.style.display="inline";
      }else{
        info.style.display="none";
      }
    }
  })
</script>